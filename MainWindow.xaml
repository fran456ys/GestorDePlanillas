<Window x:Class="GestorDePlanillas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDePlanillas"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:UserControls="clr-namespace:GestorDePlanillas.Views.UserControls"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Gestor de Planillas" Height="1080" Width="1920"
        Icon="/Assets/fotoTernero.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" ResizeDirection="Columns"
                      Width="5" HorizontalAlignment="Center" Background="Black"/>

        <Rectangle Fill="White" Grid.Column="2"/>

        <UserControls:StackPanelDashBoard>
        </UserControls:StackPanelDashBoard>
    </Grid>
</Window>
