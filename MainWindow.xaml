<Window x:Class="GestorDePlanillas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDePlanillas"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:UserControls="clr-namespace:GestorDePlanillas.Views.UserControls"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Gestor de Planillas" Height="720" Width="1280"
        Icon="/Assets/fotoTernero.ico">
    <Grid Background="#EAEFEF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <UserControls:StackPanelDashBoard ImportarExcelClick="StackPanelDashBoard_ImportarExcelClick" CargarTerneroClick="StackPanelDashBoard_CargarTerneroClick"
                                          ReportesClick="StackPanelDashBoard_ReportesClick"/>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" ResizeDirection="Columns"
                      Width="5" HorizontalAlignment="Center" Background="#7F8CAA"/>

        <Rectangle Fill="#EAEFEF" Grid.Column="2"/>

        <ContentControl x:Name="MainContent" Grid.Column="2">
            <UserControls:ImportarExcelView />
        </ContentControl>

    </Grid>
</Window>
