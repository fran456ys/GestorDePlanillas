<Window x:Class="GestorDePlanillas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDePlanillas"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:UserControls="clr-namespace:GestorDePlanillas.Views.UserControls"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Gestor de Planillas" Height="1080" Width="1920"
        Icon="/Assets/fotoTernero.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <UserControls:StackPanelDashBoard>
        </UserControls:StackPanelDashBoard>
        
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" ResizeDirection="Columns"
                      Width="5" HorizontalAlignment="Center" Background="Black"/>

        <Rectangle Fill="White" Grid.Column="2"/>

        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <UserControls:PlaceHolderTextBox Grid.Column="1" Width="800" x:Name="tbImportador"/>
            </Grid>
            <DataGrid x:Name="dgTerneros" Grid.Row="1" Grid.ColumnSpan="2" Margin="10"
              AutoGenerateColumns="True" IsReadOnly="True" Background="#F3F4F6"/>
        </Grid>
        
    </Grid>
</Window>
