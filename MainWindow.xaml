<Window x:Class="GestorDePlanillas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDePlanillas"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Gestor de Planillas" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" ResizeDirection="Columns"
                      Width="5" HorizontalAlignment="Center"/>

        <Rectangle Fill="Blue" Grid.Column="2"/>

        <StackPanel Margin="12" >
            <TextBlock Text="My first ModernWPF app"  />
            <Button Content="Cargar Ternero" Style="{StaticResource SidebarButton}" />
            <Button Content="Importador de Terneros" Style="{StaticResource SidebarButton}"/>
        </StackPanel>
    </Grid>
</Window>
