<UserControl x:Class="GestorDePlanillas.Views.UserControls.PlaceHolderTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:GestorDePlanillas.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Button x:Name="btnArchivos" Width="100" Height="50" Content="Subir Archivo" Click="btnArchivos_Click"/>
        <TextBox x:Name="txtInput" Grid.Column="1" VerticalContentAlignment="Center" FontSize="18" FontWeight="Light" Background="Transparent"
                 TextChanged="txtInput_TextChanged" Margin="10,0,0,0" Height="50" PreviewKeyDown="txtInput_PreviewKeyDown" PreviewTextInput="txtInput_PreviewTextInput"/>
        <TextBlock Grid.Column="1" x:Name="tbPlaceHolder" FontSize="18" FontWeight="Light" Text="No file selected..." Foreground="DarkGray"
                   VerticalAlignment="Center" Margin="18,0,0,0" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
